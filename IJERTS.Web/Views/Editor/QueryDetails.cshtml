
@{
    @model IJERTS.Objects.Queries
    ViewData["Title"] = "QueryDetails";
}

<div class="row">

    <div class="row">
        <div class="col-sm-12">
            <h2>Query Details</h2>
        </div>
    </div>

    <div class="col-12">
        @using (Html.BeginForm("QueryDetails", "Editor", FormMethod.Post))
        {
            if (Model != null && Model.QueryId > 0)
            {
                @Html.HiddenFor(model => Model.QueryId)
                <div class="col-12">

                    <div class="card-box">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <td width="20%">First Name</td>
                                    <td width="80%">@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <td>Last Name</td>
                                    <td>@Model.LastName</td>
                                </tr>
                                <tr>
                                    <td>Email Address</td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td>Query</td>
                                    <td>@Model.QueryText</td>
                                </tr>
                                <tr>
                                    <td>Response</td>
                                    <td>
                                        @Html.TextAreaFor(model => model.QueryAnswer, new { @class = "form-control placeholder-no-fix disablecopypaste", @maxlength = 1000, @row = 4, @placeholder = "Query", @name = "QueryAnswer", @autocomplete = "off" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-box">

                        <div class="form-group mb-0 justify-content-end row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-info waves-effect waves-light btnSave" id="btnSave">Submit</button>
                                <button type="submit" class="hidden" id="btnSubmit">Submit</button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label id="lblError" class="text-danger"> @TempData["Result"]</label>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            }
        }
    </div>
</div>

