@{
    @model IEnumerable<IJERTS.Objects.Paper>
    ViewData["Title"] = "TrackMyPaper";
}

<div class="row">

    <div class="row">
        <div class="col-sm-12">
            <h2>Track My Paper</h2>
        </div>
    </div>

    <div class="col-12">
        <div class="card-box">

            <div class="form-group row">
                <div class="col-12">
                    <table class="table table-bordered table-striped table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Created On</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><p>@item.MainTitle</p></td>
                                <td><p>@item.Status.Status</p></td>
                                <td><p>@item.CreatedBy</p></td>
                                <td><p>@item.CreatedDateTime.ToShortDateString()</p></td>
                                <td><p>@Html.ActionLink("Details", "GetPaperDetails", "Author", new { id = @item.PaperId }, null)</p></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>