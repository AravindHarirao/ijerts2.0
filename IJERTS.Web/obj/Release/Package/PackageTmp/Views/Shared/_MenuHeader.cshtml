                            <li>
                                <ul>
                                    <li><a href="@Url.Action("Index", "Editor")">Dashboard</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="has-submenu">
                        <a href="@Url.Action("Index", "Reviewer")"><i class="icon-docs"></i>Reviewer</a>
                        <ul class="submenu megamenu">
                            <li>
                                <ul>
                                    <li><a href="@Url.Action("Responsiblities", "Reviewer")">Reviewers Responsibilities</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="has-submenu">
                        <a href="#"><i class="icon-present"></i>Quick Link</a>
                        <ul class="submenu megamenu">
                            <li>
                                <ul>
                                    <li><a href="@Url.Action("CallforPaper", "Home")">Call for Papers</a></li>
                                    <li><a href="@Url.Action("ResearachArea", "Home")">Latest Issues</a></li>
                                    <li><a href="@Url.Action("ResearachArea", "Home")">Previous Issues</a></li>
                                    <li><a href="@Url.Action("ResearachArea", "Home")">Research Area</a></li>
                                    <li><a href="@Url.Action("Downloads", "Home")">Downloads</a></li>
                                    <li><a href="@Url.Action("FAQ", "Home")">FAQ</a></li>
                                    <li><a href="@Url.Action("Queries", "Home")">Contact Us</a></li>
                                </ul>
                            </li>

                        </ul>
                    </li>
                    @if (Session["UserId"] == null)
                    {
                        <li class="has-submenu">
                            <a href="#"><i class="icon-present"></i>Login</a>
                            <ul class="submenu megamenu">
                                <li>
                                    <ul>
                                        <li><a href="@Url.Action("AuthorLogin", "Login")">Author Login</a></li>
                                        @*<li><a href="@Url.Action("EditorLogin", "Login")">Editor Login</a></li>*@
                                        <li><a href="@Url.Action("ReviewerLogin", "Login")">Reviewer Login</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                <!-- End navigation menu -->
            </div> <!-- end #navigation -->
        </div> <!-- end container -->
    </div> <!-- end navbar-custom -->
</header>