<header id="topnav">
    <div class="topbar-main">
        <div class="container-fluid">

            <!-- Logo container-->
            <div class="logo">
                <!-- Image Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="@Url.Content("~/Content/images/logo_sm.png")" alt="" height="26" class="logo-small">
                    <img src="@Url.Content("~/Content/images/logo.png")" alt="" height="112" class="logo-large">
                </a>
            </div>
            <!-- End Logo container-->

            <div class="menu-extras topbar-custom">
                <ul class="list-unstyled topbar-right-menu float-right mb-0">
                    <li class="menu-item">
                        <!-- Mobile menu toggle-->
                        <a class="navbar-toggle nav-link">
                            <div class="lines">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </a>
                        <!-- End mobile menu toggle-->
                    </li>

                    @if (Session["UserId"] != null)
                    {
                        <li class="dropdown notification-list">
                            <a class="nav-link dropdown-toggle waves-effect nav-user" data-toggle="dropdown" href="#" role="button"
                               aria-haspopup="false" aria-expanded="false">
                                <img src="@Url.Content("~/Content/images/users/avatar-1.jpg")" alt="user" class="rounded-circle"> <span class="ml-1 pro-user-name">@Session["FirstName"]<i class="mdi mdi-chevron-down"></i> </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-animated profile-dropdown">
                                <!-- item-->
                                <div class="dropdown-item noti-title">
                                    <h6 class="text-overflow m-0">Welcome @Session["FirstName"]!</h6>
                                </div>
                                <!-- item-->
                                @if (Session["UserId"] != null)
                                {
                                    if (Session["UserType"].ToString() == "A")
                                    {
                                        <a href="@Url.Action("MyProfile", "Author")" class="dropdown-item notify-item">
                                            <i class="fi-head"></i> <span>My Profile</span>
                                        </a>
                                    }
                                    else if (Session["UserType"].ToString() == "R")
                                    {
                                        <a href="@Url.Action("MyProfile", "Reviewer")" class="dropdown-item notify-item">
                                            <i class="fi-head"></i> <span>My Profile</span>
                                        </a>
                                    }
                                }
                                <!-- item-->
                                <a href="@Url.Action("ChangePassword", "Login")" class="dropdown-item notify-item">
                                    <i class="fi-cog"></i> <span>Change Password</span>
                                </a>
                                <!-- item-->
                                <a href="@Url.Action("UpdateUserSession", "Login")" class="dropdown-item notify-item">
                                    <i class="fi-power"></i> <span>Logout</span>
                                </a>
                            </div>
                        </li>
                    }

                </ul>
            </div>
            <!-- end menu-extras -->
            <div class="clearfix"></div>
        </div> <!-- end container -->
    </div>

    <!-- end topbar-main -->
    <div class="navbar-custom">
        <div class="container-fluid">
            <div id="navigation">
                <!-- Navigation Menu-->
                <ul class="navigation-menu">
                    <li class="has-submenu active">
                        <a href="@Url.Action("Index", "Home")"><i class="icon-home"></i>Home</a>
                    </li>
                    <li class="has-submenu">
                        <a href="@Url.Action("About", "Home")"><i class="icon-people"></i>About us</a>
                    </li>
                    <li class="has-submenu">
                        <a href="@Url.Action("Index", "Author")"><i class="icon-user"></i>Author</a>
                        <ul class="submenu megamenu">
                            <li>
                                <ul>
                                    <li><a href="@Url.Action("PublicationCharges", "Author")">Publication Charges</a></li>
                                    <li><a href="@Url.Action("AuthorResponsibility", "Author")">Author Responsibility</a></li>
                                    <li><a href="@Url.Action("PostPaper", "Author")">Post Paper</a></li>
                                    <li><a href="@Url.Action("TrackMyPaper", "Author")">Track My Paper</a></li>
                                    <li><a href="https://smallseotools.com/plagiarism-checker/" target="_blank">Check Plagarism</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="has-submenu">
                        <a href="@Url.Action("EditorialBoard", "Editor")"><i class="icon-book-open"></i>Editorial Board</a>
